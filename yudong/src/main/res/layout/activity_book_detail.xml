<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdou.yudong.ui.activity.BookDetailActivity">

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="返回"
        android:id="@+id/ib_bookdetail_back"
        android:layout_width="58dp"
        android:layout_height="55dp" />

    <RelativeLayout
        android:padding="20dp"
        android:layout_below="@id/ib_bookdetail_back"
        android:layout_marginBottom="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_bookdetail_img"
            android:scaleType="fitXY"
            android:layout_width="90dp"
            android:layout_height="110dp" />
        <TextView
            android:id="@+id/tv_bookdetail_name"
            android:textSize="18sp"
            android:layout_toRightOf="@id/iv_bookdetail_img"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_bookdetail_author"
            android:textSize="16sp"
            android:layout_alignLeft="@id/tv_bookdetail_name"
            android:layout_below="@id/tv_bookdetail_name"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_bookdetail_count"
            android:textSize="16sp"
            android:layout_alignLeft="@id/tv_bookdetail_author"
            android:layout_below="@id/tv_bookdetail_author"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_bookdetail_intro"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:layout_below="@id/iv_bookdetail_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <Button
            android:id="@+id/btn_bookdetail_download"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:text="下载"/>

    </RelativeLayout>
</RelativeLayout>
