<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#689AD3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_bookstore_load_result"
        android:textSize="30sp"
        android:textColor="#000"
        android:visibility="gone"
        android:gravity="center"
        android:text="点击刷新"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:id="@+id/srl_bookstore_refresh"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="#4186D3"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_search_book_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_search"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:gravity="right|center_vertical"
                    android:text="搜索" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="#fff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="今日排行"
                        android:textColor="#000"
                        android:textSize="20sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_today_rank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>

            </LinearLayout>
            <!--小说-->
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="小说"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_lookmore_fiction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="查看全部》"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/gv_bookstore_classificy_fiction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="90dp"
                        android:verticalSpacing="10dp"
                        android:gravity="center"
                        android:stretchMode="spacingWidthUniform"
                        android:numColumns="3" >
                    </GridView>
                </LinearLayout>
            </LinearLayout>
            <!--文学-->
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_height="350dp">
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="小说"
                            android:textColor="#000"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/tv_lookmore_literature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="查看全部》"
                            android:textColor="#000"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <GridView
                            android:id="@+id/gv_bookstore_classificy_literature"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:columnWidth="90dp"
                            android:verticalSpacing="10dp"
                            android:gravity="center"
                            android:stretchMode="spacingWidthUniform"
                            android:numColumns="3"></GridView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--传记-->
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="传记"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_lookmore_biography"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="查看全部》"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/gv_bookstore_classificy_biography"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="90dp"
                        android:verticalSpacing="10dp"
                        android:gravity="center"
                        android:stretchMode="spacingWidthUniform"
                        android:numColumns="3" >
                    </GridView>
                </LinearLayout>
            </LinearLayout>
            <!--历史-->
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="历史"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_lookmore_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="查看全部》"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/gv_bookstore_classificy_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="90dp"
                        android:verticalSpacing="10dp"
                        android:gravity="center"
                        android:stretchMode="spacingWidthUniform"
                        android:numColumns="3" >
                    </GridView>
                </LinearLayout>
            </LinearLayout>
            <!--经济-->
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="经济"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_lookmore_economics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="查看全部》"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/gv_bookstore_classificy_economics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="90dp"
                        android:verticalSpacing="10dp"
                        android:gravity="center"
                        android:stretchMode="spacingWidthUniform"
                        android:numColumns="3" >
                    </GridView>
                </LinearLayout>
            </LinearLayout>
            <!--管理-->
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="管理"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_lookmore_management"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="查看全部》"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/gv_bookstore_classificy_management"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="90dp"
                        android:verticalSpacing="10dp"
                        android:gravity="center"
                        android:stretchMode="spacingWidthUniform"
                        android:numColumns="3" >
                    </GridView>
                </LinearLayout>
            </LinearLayout>
            <!--励志-->
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="350dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="励志"
                        android:textColor="#000"
                        android:textSize="20sp" />
                    <TextView
                        android:id="@+id/tv_lookmore_motivational"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="查看全部》"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/gv_bookstore_classificy_motivational"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:columnWidth="90dp"
                        android:verticalSpacing="10dp"
                        android:gravity="center"
                        android:stretchMode="spacingWidthUniform"
                        android:numColumns="3" >
                    </GridView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>