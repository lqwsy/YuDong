<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#0D58A6"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/iv_mypage_head_img"
            android:layout_centerInParent="true"
            android:background="@mipmap/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_mypage_nickname"
            android:layout_below="@id/iv_mypage_head_img"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:text="一起来看流星雨"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mypage_change_info"
        android:layout_marginTop="20dp"
        android:background="#689CD2"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="编辑个人资料"
            android:textSize="18sp"
            android:clickable="false"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mypage_safe"
        android:clickable="true"
        android:layout_marginTop="20dp"
        android:background="#689CD2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="账户安全"
            android:textSize="18sp"
            android:clickable="false"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="#689CD2"
        android:clickable="true"
        android:id="@+id/rl_mapage_aboutus"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="关于我们"
            android:textSize="18sp"
            android:clickable="false"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_mypage_logout"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom"
        android:background="#FF3900"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <!--<ImageButton
            android:id="@+id/ib_logout"
            android:layout_width="match_parent"
            android:layout_height="40dp" />-->
        <TextView
            android:text="退出登录"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>