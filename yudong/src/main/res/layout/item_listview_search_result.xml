<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/ib_result_book_img"
        android:scaleType="fitXY"
        android:layout_width="90dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/tv_result_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/ib_result_book_img" />

    <TextView
        android:id="@+id/tv_result_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:layout_below="@+id/tv_result_book_name"
        android:layout_toEndOf="@+id/ib_result_book_img"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tv_result_book_introduce"
        android:layout_below="@+id/tv_result_book_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:layout_alignLeft="@id/tv_result_book_author"
        android:layout_alignBottom="@id/ib_result_book_img"/>

</RelativeLayout>